* {
  spacing: 0;
  width: 25%;
  background-color: #181818;
  text-color: #d8d8d8;
}

window {
  border: 5px;
  border-color: #585858;
}

inputbar {
  children: [ prompt, entry ];
}

prompt {
  padding: 32px;
}

entry {
  padding: 32px 0px;
}

element {
  padding: 16px;
}

element-icon {
  size: 2ch;
}

element selected {
  background-color: #383838;
}
