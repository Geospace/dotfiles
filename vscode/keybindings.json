// While Vim bindings relies on the ctrl key and letters in normal mode,
// VSCode bindings mostly relies on the cmd key
[
  {
    "key": "cmd+p",
    "command": "workbench.action.quickOpen"
    // Browse file when not in an editor (f-f is available otherwise)
  },
  {
    "key": "cmd+i",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
    // Hover with keyboard
  },
  {
    "key": "shift+cmd+i",
    "command": "editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
    // Open quick fix with keyboard
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.openNextRecentlyUsedEditorInGroup"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.quickOpenNavigateNextInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.openPreviousRecentlyUsedEditorInGroup"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.quickOpenNavigatePreviousInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
]
