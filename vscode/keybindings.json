// While Vim bindings relies on the ctrl key and letters in normal mode,
// VSCode bindings mostly relies on the cmd key
[
  {
    "key": "cmd+p",
    "command": "workbench.action.quickOpen"
    // Browse file when not in an editor (f-f is available otherwise)
  },
  {
    "key": "cmd+h",
    "command": "workbench.action.showCommands"
    // Command palette
  },
  {
    "key": "cmd+k",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
    // Hover with keyboard
  },
  {
    "key": "shift+cmd+k",
    "command": "editor.action.quickFix",
    "when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
    // Open quick fix with keyboard
  },
  // There is also cmd+j to open the bottom pane but it looks like
  // a default shortcut
]