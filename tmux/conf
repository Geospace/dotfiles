# 256 colors
set -g default-terminal "screen-256color"

# Remap master key
unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix

# Split panes
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# Tmux switch
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# No automatic rename
set-option -g allow-rename off

# Left text
set -g status-justify left
set -g status-bg default
set -g status-fg white
set -g status-interval 4
set -g status-left ''

# Right text
setw -g window-status-format "#[fg=colour8]#[bg=white] #I #[bg=colour8]#[fg=white] #W "
setw -g window-status-current-format "#[fg=black]#[bg=colour7] #I #[fg=black]#[bg=colour15] #W "
setw -g window-status-current-bg black
setw -g window-status-current-fg yellow
setw -g window-status-bg black
setw -g window-status-fg blue
setw -g window-status-attr default
set -g status-right "#[fg=yellow]#S #[fg=white]| #[fg=green]%d-%m-%Y #[fg=white]| #[fg=cyan]%A %H:%M"
set -g status-right-length 60

# Messaging
set -g message-fg black
set -g message-bg yellow
set -g message-command-fg blue
set -g message-command-bg black
