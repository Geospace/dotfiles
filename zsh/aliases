# tmux
alias tmux="tmux -2"
alias tm="tmux -2"
alias at="tmux attach -t"

# yaourt / pacman
alias search="yaourt"
alias install="yaourt -Sa"
alias update="yaourt -Syua"
alias remove="yaourt -Rsn"
alias clean="paccache -rk 1"
alias orphans="sudo pacman -Rns `pacman -Qtdq`"

# ssh
alias irc="ssh vps -t tmux attach -t IRC"

# sublime text
alias st="subl3"

# gdb
alias gdb="gdb -q"

# forecast
alias meteo="curl wttr.in/Paris"
alias moon="curl wttr.in/Moon"

# valgrind
alias vatrack="valgrind --track-origins=yes"
alias valeak="valgrind --leak-check=full"

# make
alias m="make"
alias mr="make re"
alias mc="make clean"
alias mf="make fclean"

# misc
alias mv="mv -v"
alias cp="cp -v"
alias ccp="cp -R"
alias ln="ln -v"
alias rrm="rm -Rf"
alias cx="chmod +x"
alias what="ag --hidden --ignore .git"
alias goodbyefriend="shutdown -h now"
alias internet="nmtui"
